<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".ui.AboutFragment">


    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="-100dp"
        android:visibility="visible"
        >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginStart="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:padding="5dp"
            />
        
        <ImageView
            android:id="@+id/pokemon_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            />
        
    </FrameLayout>

    <TextView
        android:id="@+id/pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charizard"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="28sp"
        android:fontFamily="@font/pokemon_font"
        android:letterSpacing="0.15"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/pokemon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="water"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/tetx_bg"
        android:paddingVertical="3dp"
        android:paddingHorizontal="35dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="50dp"
            >
            <TextView
                android:id="@+id/pokemon_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90.5 KG"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#858080"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="50dp"
            >
            <TextView
                android:id="@+id/pokemon_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.05 M"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#858080"
                />
        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Base Stats"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >

        <LinearLayout
            android:weightSum="6"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="ATK"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="DEF"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="SPA"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="SPD"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="SPD"
                android:textColor="#858080"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginHorizontal="70dp"
            >
            <ProgressBar
                android:id="@+id/progress_hp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="15"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <ProgressBar
                android:id="@+id/progress_at"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="5"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <ProgressBar
                android:id="@+id/progress_de"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="1"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />

            <ProgressBar
                android:id="@+id/progress_sa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="13"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />


            <ProgressBar
                android:id="@+id/progress_sd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="9"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />


            <ProgressBar
                android:id="@+id/progress_s"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="15"
                android:progressDrawable="@drawable/progress_shape"
                android:progress="4"
                android:layout_weight="1"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="90dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:weightSum="6"
            >
            <TextView
                android:id="@+id/hp_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/at_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/df_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/sa_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/sd_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/s_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="HP"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                />

        </LinearLayout>

    </FrameLayout>



</LinearLayout>








































